modules = ["python-3.11"]

[project]
name = "restaurant-ops-backend"
description = "FastAPI backend for Restaurant Operations Dashboard"
language = "python"

# âœ… Ensure Replit passes its dynamic port
run = "uvicorn main:app --host 0.0.0.0 --port 8080"

[nix]
channel = "stable-25_05"
packages = ["libxcrypt"]

[env]
PORT = "8000" # fallback to 8000 if Replit doesn't inject one

[agent]
expertMode = true

[[ports]]
localPort = 8000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080
