modules = ["python-3.11"]

[project]
name = "restaurant-ops-backend"
description = "FastAPI backend for Restaurant Operations Dashboard"
language = "python"

# âœ… Ensure Replit passes its dynamic port
run = "uvicorn main:app --host 0.0.0.0 --port 8080"

[nix]
channel = "stable-25_05"
packages = ["cacert", "cargo", "glibcLocales", "libiconv", "libuv", "libxcrypt", "rustc"]

[env]
PORT = "8000" # fallback to 8000 if Replit doesn't inject one

[agent]
expertMode = true

[[ports]]
localPort = 8000
externalPort = 8000

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FastAPI Server"

[[workflows.workflow]]
name = "FastAPI Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "console"
